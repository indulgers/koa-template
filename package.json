{
  "name": "ts-koa-starter",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "description": "一个简单的koa+typescript+typeorm的起手式",
  "tags": [
    "orm",
    "typescript",
    "typeorm",
