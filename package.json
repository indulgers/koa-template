    "koa-static": "^5.0.0",
    "koa-websocket": "^7.0.0",
    "koa2": "2.0.0-alpha.7",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.5",
    "reflect-metadata": "^0.1.13",
